<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NavbarStyle" parent="Widget.MaterialComponents.BottomNavigationView">

        <item name="itemIconTint">@color/navbar_selector</item>
        <item name="itemTextColor">@color/navbar_selector</item>

        <item name="itemBackground">@drawable/navbar_item_background</item>

    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/papyrus</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTabText2" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>