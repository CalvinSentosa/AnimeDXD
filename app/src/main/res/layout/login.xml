<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <!-- Gradient Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background" />

    <!-- Semi-transparent Image Overlay (40% opacity) -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_image"
        android:alpha="0.2"
        android:scaleType="centerCrop" />

    <!-- Content Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Logo/Title -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_anime_dxd"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textAlignment="center"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:layout_marginBottom="24dp"
            android:textStyle="bold"
            android:fontFamily="@font/impact"/>

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Come on, register to enjoy the excitement of watching anime without ads"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginBottom="32dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:lineSpacingExtra="4dp"
            android:textStyle="italic"
            android:fontFamily="@font/poppins"/>

        <!-- Username -->
        <EditText
            android:id="@+id/usernameTxt"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:hint="Username"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_border_bg"
            android:fontFamily="@font/poppins"/>

        <!-- Password -->
        <EditText
            android:id="@+id/passwordTxt"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:hint="Password"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textColorHint="#AAAAAA"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/edittext_border_bg"
            android:fontFamily="@font/poppins"/>

        <TextView
            android:id="@+id/errorTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textSize="11sp"
            android:textColor="@color/red"
            android:layout_marginBottom="32dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:lineSpacingExtra="4dp"
            android:fontFamily="@font/poppins"/>

        <!-- Login Button -->
        <Button
            android:id="@+id/submitBtn"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:text="Login"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="@android:color/white"
            android:fontFamily="@font/poppins"/>
    </LinearLayout>
</FrameLayout>