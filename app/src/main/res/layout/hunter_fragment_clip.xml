<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/framedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:background="@drawable/framed_background"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:text="Judul: Hunter x Hunter
Genre: Action, Adventure, Fantasy, Shounen
Tanggal Rilis: 2 Oktober 2011
Sutradara: Hiroshi Kōjina
Cerita Oleh: Yoshihiro Togashi
Karakter: Gon Freecss, Killua Zoldyck, Kurapika, Leorio, Hisoka
Durasi: Sekitar 23 menit per episode (Total 148 episode)"
            android:elevation="4dp"
            android:fontFamily="@font/poppins"/>

        <!-- Sample YouTube thumbnail or embedded video (WebView or YouTubePlayerView) -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/hunter_banner"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"/>

        <!-- Bottom image thumbnails -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/hunter1"
                android:scaleType="centerCrop"
                android:layout_margin="4dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/hunter2"
                android:scaleType="centerCrop"
                android:layout_margin="4dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/hunter3"
                android:scaleType="centerCrop"
                android:layout_margin="4dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
