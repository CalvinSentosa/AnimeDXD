<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/framedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:background="@drawable/framed_background"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:text="Judul: Haikyuu!!
Genre: Sports, Comedy, Drama
Tanggal Rilis: 6 April 2014
Sutradara: Susumu Mitsunaka (Season 1–3), Masako Satō (Season 4)
Cerita Oleh: Haruichi Furudate
Karakter: Shoyo Hinata, Tobio Kageyama, Daichi Sawamura, Koshi Sugawara, Kei Tsukishima
Durasi: Sekitar 24 menit per episode (Total 85 episode)
"
            android:elevation="4dp"/>

        <!-- Sample YouTube thumbnail or embedded video (WebView or YouTubePlayerView) -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/haikyu_banner"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"/>

        <!-- Bottom image thumbnails -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/haikyuu1"
                android:scaleType="centerCrop"
                android:layout_margin="4dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/haikyuu2"
                android:scaleType="centerCrop"
                android:layout_margin="4dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/haikyuu3"
                android:scaleType="centerCrop"
                android:layout_margin="4dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
