<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid background color -->
    <solid android:color="@color/white" /> <!-- Semi-transparent dark gray -->

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#FFFFFF" /> <!-- White border -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Padding for text -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>